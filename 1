class Person
{
    protected int age;
    public void Greet() { Console.WriteLine("Hello"); }
    public void SetAge(int age) { this.age = age; }
}

class Student : Person
{
    public void Study() { Console.WriteLine("I'm studying"); }
    public void ShowAge() { Console.WriteLine($"My age is: {age} years old"); }
}

class Professor : Person
{ 
    public void Explain() { Console.WriteLine("I'm explaining"); }
}

class StudentProfessorTest
{
    static void Main(string[] args)
    {
        Person person = new Person();
        person.Greet();
        Console.WriteLine();

        Student student = new Student();
        student.SetAge(20);
        student.Greet();
        student.ShowAge();
        student.Study();
        Console.WriteLine();

        Professor professor = new Professor();
        professor.SetAge(45);
        professor.Greet();
        professor.Explain();
    }
}
